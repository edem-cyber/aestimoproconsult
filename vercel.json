{
    "version": 2,
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "css/**",
            "use": "@vercel/static"
        },
        {
            "src": "js/**",
            "use": "@vercel/static"
        },
        {
            "src": "images/**",
            "use": "@vercel/static"
        },
        {
            "src": "fonts/**",
            "use": "@vercel/static"
        },
        {
            "src": "demos/**",
            "use": "@vercel/static"
        },
        {
            "src": "revolution/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/index.php"
        },
        {
            "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
            "dest": "/$1"
        },
        {
            "src": "/([^.]+)",
            "dest": "/$1.php"
        }
    ]
}
